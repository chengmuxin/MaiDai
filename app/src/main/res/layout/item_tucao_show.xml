<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/white">

        <com.hooha.maidai.chat.view.CircleImageView
            android:id="@+id/iv_tucao_show_avatar"
            android:layout_width="55dp"
            android:layout_height="55dp" />

        <TextView
            android:id="@+id/tv_tucao_show_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_tucao_show_avatar"
            android:gravity="bottom"
            android:maxLines="1"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_tucao_show_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_tucao_show_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_tucao_show_avatar" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_tucao_show_info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.loopj.android.image.SmartImageView
            android:id="@+id/iv_tucao_show_info_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:scaleType="fitXY"
            android:src="@color/background_gray3" />

        <ImageView
            android:id="@+id/iv_tucao_show_info_video"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:padding="60dp"
            android:src="@drawable/play" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/lay_tucao_show_lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:visibility="gone">

        <com.loopj.android.image.SmartImageView
            android:id="@+id/iv_tucao_show_info_pic1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:scaleType="centerCrop"
            android:src="@color/background_gray3" />

        <com.loopj.android.image.SmartImageView
            android:id="@+id/iv_tucao_show_info_pic2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:scaleType="centerCrop"
            android:src="@color/background_gray3" />

        <com.loopj.android.image.SmartImageView
            android:id="@+id/iv_tucao_show_info_pic3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:scaleType="centerCrop"
            android:src="@color/background_gray3" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_tucao_show_lay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:visibility="gone">

        <com.loopj.android.image.SmartImageView
            android:id="@+id/iv_tucao_show_info_pic4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:scaleType="centerCrop"
            android:src="@color/background_gray3" />

        <com.loopj.android.image.SmartImageView
            android:id="@+id/iv_tucao_show_info_pic5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:scaleType="centerCrop"
            android:src="@color/background_gray3" />

        <com.loopj.android.image.SmartImageView
            android:id="@+id/iv_tucao_show_info_pic6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:scaleType="centerCrop"
            android:src="@color/background_gray3" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_tucao_show_lay3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:visibility="gone">

        <com.loopj.android.image.SmartImageView
            android:id="@+id/iv_tucao_show_info_pic7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:scaleType="centerCrop"
            android:src="@color/background_gray3" />

        <com.loopj.android.image.SmartImageView
            android:id="@+id/iv_tucao_show_info_pic8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:scaleType="centerCrop"
            android:src="@color/background_gray3" />

        <com.loopj.android.image.SmartImageView
            android:id="@+id/iv_tucao_show_info_pic9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:scaleType="centerCrop"
            android:src="@color/background_gray3" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_tucao_show_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/h22" />

        <TextView
            android:id="@+id/tv_item_tucao_show_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:paddingBottom="3dp"
        android:paddingTop="3dp">

        <LinearLayout
            android:id="@+id/lay_tucao_show_up"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_tucao_show_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/h23" />

            <TextView
                android:id="@+id/tv_tucao_show_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/background_gray3" />

        <LinearLayout
            android:id="@+id/lay_tucao_show_down"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_tucao_show_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/h24" />

            <TextView
                android:id="@+id/tv_tucao_show_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <TextView
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/background_gray3" />

        <LinearLayout
            android:id="@+id/lay_tucao_show_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_tucao_show_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/h25" />

            <TextView
                android:id="@+id/tv_tucao_show_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/background_gray3" />

        <LinearLayout
            android:id="@+id/lay_tucao_show_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_tucao_show_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/h26" />

            <TextView
                android:id="@+id/tv_tucao_show_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>