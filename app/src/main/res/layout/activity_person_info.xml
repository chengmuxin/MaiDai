<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="设置个人信息"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text="请选择您的性别："
                android:textSize="16sp" />

            <com.hooha.maidai.chat.view.CheckableGroup
                android:id="@+id/checkable_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.hooha.maidai.chat.view.CheckableView
                        android:id="@+id/checkable_view_male"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        app:cv_borderColor="@color/theme_orange"
                        app:cv_borderWidth="4"
                        app:cv_checkedColor="@color/theme_orange"
                        app:cv_checkedImage="@drawable/boy"
                        app:cv_checkmarkColor="@color/theme_orange"
                        app:cv_normalBackgroundColor="@color/theme_orange"
                        app:cv_normalColor="@color/theme_white"
                        app:cv_normalImage="@drawable/boy" />

                    <com.hooha.maidai.chat.view.CheckableView
                        android:id="@+id/checkable_view_female"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        app:cv_borderColor="@color/theme_red"
                        app:cv_borderWidth="6"
                        app:cv_checkedColor="@color/theme_red"
                        app:cv_checkedImage="@drawable/girl"
                        app:cv_isChecked="false"
                        app:cv_normalBackgroundColor="@color/theme_red"
                        app:cv_normalColor="@color/theme_white"
                        app:cv_normalImage="@drawable/girl" />

                </LinearLayout>

            </com.hooha.maidai.chat.view.CheckableGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text="请输入您的年龄:" />

            <EditText
                android:id="@+id/et_age"
                android:maxLength="2"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text="请选择您的爱好：" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.hooha.maidai.chat.view.CheckableView
                        android:id="@+id/checkable_view_1"
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        app:cv_borderColor="@color/theme_red"
                        app:cv_checkedColor="@color/theme_red"
                        app:cv_checkedImage="@drawable/youpiao"
                        app:cv_isChecked="false"
                        app:cv_normalBackgroundColor="@color/theme_red"
                        app:cv_normalColor="@color/theme_white"
                        app:cv_normalImage="@drawable/youpiao" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="集邮" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.hooha.maidai.chat.view.CheckableView
                        android:id="@+id/checkable_view_2"
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        app:cv_borderColor="@color/theme_red"
                        app:cv_checkedColor="@color/theme_red"
                        app:cv_checkedImage="@drawable/basketball"
                        app:cv_isChecked="false"
                        app:cv_normalBackgroundColor="@color/theme_red"
                        app:cv_normalColor="@color/theme_white"
                        app:cv_normalImage="@drawable/basketball" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="篮球" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.hooha.maidai.chat.view.CheckableView
                        android:id="@+id/checkable_view_3"
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        app:cv_borderColor="@color/theme_red"
                        app:cv_checkedColor="@color/theme_red"
                        app:cv_checkedImage="@drawable/bicycle"
                        app:cv_isChecked="false"
                        app:cv_normalBackgroundColor="@color/theme_red"
                        app:cv_normalColor="@color/theme_white"
                        app:cv_normalImage="@drawable/bicycle" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="自行车" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.hooha.maidai.chat.view.CheckableView
                        android:id="@+id/checkable_view_4"
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        app:cv_borderColor="@color/theme_red"
                        app:cv_checkedColor="@color/theme_red"
                        app:cv_checkedImage="@drawable/run"
                        app:cv_isChecked="false"
                        app:cv_normalBackgroundColor="@color/theme_red"
                        app:cv_normalColor="@color/theme_white"
                        app:cv_normalImage="@drawable/run" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="跑步" />
                </LinearLayout>

            </LinearLayout>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text="选择话题:" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是否被驴踢过" />

                <CheckBox
                    android:id="@+id/cb_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是否是大舌头" />


            </LinearLayout>

            <Button
                android:id="@+id/save"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_positive_btn"
                android:text="保存"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>