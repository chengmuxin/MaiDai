<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <com.hooha.maidai.chat.view.CircleImageView
            android:id="@+id/iv_tucao_comment_avatar"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/userlogo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tucao_comment_name"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="无敌美少女" />

            <TextView
                android:id="@+id/tv_tucao_comment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="这首歌唱出了上班簇的心声,这首歌唱出了上班簇的心声,这首歌唱出了上班簇的心声,这首歌唱出了上班簇的心声,这首歌唱出了上班簇的心声" />
        </LinearLayout>

        <!--    <TextView
                android:id="@+id/tv_tucao_comment_up"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:drawableTop="@drawable/h23"
                android:gravity="center_horizontal"
                android:paddingTop="15dp"
                android:text="20" />-->

    </LinearLayout>


</LinearLayout>