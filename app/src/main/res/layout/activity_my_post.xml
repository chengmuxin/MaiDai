<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/head_with_back" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/activity_my_post_background_ig"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/football_ground" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/activity_my_post_background_ig"
            android:background="#d9d9d9" />

        <ImageView
            android:id="@+id/activity_my_post_head_ig"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="130dp"
            android:scaleType="centerCrop"
            android:src="@drawable/head" />

        <TextView
            android:id="@+id/activity_my_post_nick_name_tv"
            android:text="健身小达人"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignBottom="@+id/activity_my_post_background_ig"
            android:layout_toLeftOf="@+id/activity_my_post_head_ig"
            android:layout_toStartOf="@+id/activity_my_post_head_ig"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/activity_my_post_signature_tv"
            android:text="这个人很懒 啥也没写"
            android:layout_below="@id/activity_my_post_head_ig"
            android:layout_alignParentRight="true"
            android:textSize="13sp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/tencent_tls_ui_deepgray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/black"
            android:text="今天"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginLeft="70dp"
            android:background="@drawable/camera_background"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <ImageView
            android:id="@+id/activity_my_post_add_photo_ig"
            android:layout_marginLeft="79dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/camera_add"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </RelativeLayout>


    <ListView
        android:id="@+id/activity_my_post_ListView"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

</LinearLayout>