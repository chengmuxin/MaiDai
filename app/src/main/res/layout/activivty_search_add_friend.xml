<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d8d8d8"
    android:orientation="vertical">

    <include layout="@layout/head_with_back"/>

    <EditText
        android:id="@+id/input_phone"
        android:textSize="15sp"
        android:hint="卖呆号/手机号"
        android:drawableLeft="@drawable/search_green"
        android:paddingLeft="30dp"
        android:padding="7dp"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:drawableBottom="@drawable/edit_text_line"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="50dp" />


    <TextView
        android:textColor="#989898"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="15sp"
        android:text="我的卖呆号："
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/activity_search_friend_search_RelativeLayout"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/scanning"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:text="扫一扫"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:layout_marginLeft="55dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="扫描二维码名片"
                android:textSize="13sp"
                android:layout_marginTop="30dp"
                android:textColor="#818181"
                android:layout_marginLeft="55dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#b2b2b2"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:id="@+id/activity_search_friend_cell_phone_contact_RelativeLayout"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/cell_phone_contact"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:text="手机通讯录"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:layout_marginLeft="55dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="添加或邀请通讯录中的朋友"
                android:textSize="13sp"
                android:layout_marginTop="30dp"
                android:textColor="#818181"
                android:layout_marginLeft="55dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>