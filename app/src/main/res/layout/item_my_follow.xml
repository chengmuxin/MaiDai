<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">


        <com.hooha.maidai.chat.view.CircleImageView
            android:id="@+id/item_my_follow_ImageView"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:layout_width="50dp"
            tools:src="@drawable/boy"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/item_my_follow_name_tv"
            android:text="贵妇人"
            android:textSize="18sp"
            android:textColor="#767676"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/item_my_follow_ImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_my_follow_number_tv"
            android:text="1"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:textColor="#da2222"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_alignParentBottom="true"
            android:background="#bcbcbc"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </RelativeLayout>

</LinearLayout>