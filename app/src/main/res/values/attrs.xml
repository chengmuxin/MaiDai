<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 标题模板自定义属性 -->
    <declare-styleable name="TemplateTitle">
        <!-- 标题文案 -->
        <attr name="titleText" format="string" />
        <!-- 是否有back按钮 -->
        <attr name="canBack" format="boolean" />
        <!-- back按钮文案 -->
        <attr name="backText" format="string" />
        <!-- 右侧更多功能按钮图片 -->
        <attr name="moreImg" format="reference" />
        <!-- 右侧更多功能按钮文字 -->
        <attr name="moreText" format="string" />
    </declare-styleable>

    <!-- 条形控制控件自定义属性 -->
    <declare-styleable name="LineControllerView">
        <!-- 名称 -->
        <attr name="name" format="string" />
        <!-- 内容或当前状态 -->
        <attr name="content" format="string" />
        <!-- 是否是列表中最后一个 -->
        <attr name="isBottom" format="boolean" />
        <!-- 是否可以跳转 -->
        <attr name="canNav" format="boolean" />
        <!-- 是否是开关 -->
        <attr name="isSwitch" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MovieRecorderView">
        <!-- 开始是否打开摄像头 -->
        <attr name="is_open_camera" format="boolean" />
        <!-- 一次拍摄最长时间 -->
        <attr name="record_max_time" format="integer" />
        <!-- 视频分辨率宽度 -->
        <attr name="width" format="integer" />
        <!-- 视频分辨率高度 -->
        <!--<attr name="height" format="integer" />-->
    </declare-styleable>

    <declare-styleable name="CheckableView">
        <attr name="cv_checkedImage" format="reference" />
        <attr name="cv_normalImage" format="reference" />
        <attr name="cv_checkedColor" format="reference|color" />
        <attr name="cv_normalColor" format="reference|color" />
        <attr name="cv_borderColor" format="reference|color" />
        <attr name="cv_borderWidth" format="integer" />
        <attr name="cv_borderRadius" format="float" />
        <attr name="cv_label" format="reference|string" />
        <attr name="cv_labelTextColor" format="reference|color" />
        <attr name="cv_normalBackgroundColor" format="reference|color" />
        <attr name="cv_checkedBackgroundColor" format="reference|color" />
        <attr name="cv_animationDuration" format="integer" />
        <attr name="cv_checkmarkColor" format="reference|color" />
        <attr name="cv_checkmarkPosition" format="enum">
            <enum name="topLeft" value="0" />
            <enum name="topRight" value="1" />
            <enum name="center" value="2" />
            <enum name="bottomLeft" value="3" />
            <enum name="bottomRight" value="4" />
        </attr>
        <attr name="cv_isChecked" format="boolean" />
    </declare-styleable>


    <!-- 飘星自定义属性 -->
    <declare-styleable name="HeartLayout">
        <attr name="initX" format="dimension" />
        <attr name="initY" format="dimension" />
        <attr name="xRand" format="dimension" />
        <attr name="animLengthRand" format="dimension" />
        <attr name="xPointFactor" format="dimension" />
        <attr name="animLength" format="dimension" />
        <attr name="heart_width" format="dimension" />
        <attr name="heart_height" format="dimension" />
        <attr name="bezierFactor" format="integer" />
        <attr name="anim_duration" format="integer" />
    </declare-styleable>
</resources>